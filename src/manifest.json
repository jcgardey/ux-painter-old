{
  "manifest_version": 2,
  "author": "LIFIA",
  "name": "Refactoring Tool",
  "version": "1.0",
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": [
      "node_modules/webextension-polyfill/dist/browser-polyfill.js",
      "node_modules/jquery/dist/jquery.js",
      "content_scripts/refactorings/lib/js/getStyleObject.js",
      "content_scripts/refactorings/lib/js/tipr.min.js",
      "content_scripts/refactorings/lib/js/datepickr.js",
      "content_scripts/refactorings/lib/js/awesomplete.min.js",
      "content_scripts/refactorings/lib/js/date-dropdowns.js",
      "content_scripts/refactorings/Refactorings.js",
      "content_scripts/XpathProcessor.js",
      "content_scripts/views/RefactoringsListView.js",
      "content_scripts/Sidebar.js",
      "content_scripts/main.js"
    ],
    "css": [
      "content_scripts/views/css/sidebar.css",
      "content_scripts/refactorings/lib/css/tipr.css",
      "content_scripts/refactorings/lib/css/datepickr.min.css",
      "content_scripts/refactorings/lib/css/awesomplete.css"
    ]
  }],
  "background":{
      "scripts": [
        "node_modules/webextension-polyfill/dist/browser-polyfill.js",
        "background/main.js"
      ]
  },
  "browser_action": {
    "default_title": "Usability Refactorings",
    "browser_style": true
  }
}